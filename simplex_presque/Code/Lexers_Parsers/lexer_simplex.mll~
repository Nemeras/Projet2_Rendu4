{
open Parser_simplex;;
open Num;;
}


let int = ['0'-'9']+	(* Un entier positif (variable) *)

let rat = int | "-" int

rule token = parse
	| [' ' '\t' '\n']	{ token lexbuf }		(* Saut des blancs *)
	| "~"			{ NOT }
	| "("			{ LPAREN }
	| ")"			{ RPAREN }
	| "\\/"			{ OR }
	| "/\\"			{ AND }
	| "=>"			{ IMPLY }
	| (int as s)		{ RAT (Num.num_of_string s) }
	| "x" (int as s)	{ VAR (int_of_string s) }	(* Variable *)
	| "+"			{ PLUS }
	| "<=" 			{ LEQ }
	| ">="			{ GEQ }
	| "<" 			{ LT }
	| ">"			{ GT }
	| "="			{ EQU }
	| "!="			{ DIS }
	| eof			{ EOF }				(* Fin de fichier *)
